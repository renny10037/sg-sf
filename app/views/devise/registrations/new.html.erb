<%=render 'app/layouts/navegation_users'%>
<div class="col-lg-6 col-xs-12" id="section-home2">
  <div id="home" class="hero hero--scotch2 hero--scotch2 gradient--sunset2">
    <div id="mask-home-right2">
      <div id="card-registration">
        <div id="mask-card-login">
          <div id="title-card-login">
             <span id="title-slice">registration</span>               
          </div>
          <div id="form-card-login">
            <div id="item-card-login">    
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              	
               		     
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Name</span>
								  <%= f.input :name, :label => false ,input_html: { class: "input-sesion form-control" }%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Lastname</span>
								  <%= f.input :last_name, :autofocus => true, :label => false ,input_html: { class: "input-sesion form-control" }%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Nationality</span>
								  <%= f.input :nationality, as: :country, :autofocus => true, :label => false ,input_html: { class: "input-sesion form-control", style:"border-radius: 0px !important;" }%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Identification</span>
								  <%= f.input :identification, :autofocus => true, :label => false ,input_html: { class: "input-sesion form-control",type:"number" }%>
								</div>
	                            <div class="section-item col-xs-12 col-sm-6 col-md-6">
									<span class="title-item-registration">Birthdate</span>
								    	<div class='input-group date' id='datetimepicker1'>
								    	  <%=f.input :birthdate, as: :string, label:false,input_html: {class: "form-control"}%>
								    	  <span class="input-group-addon">
								    	    <span ><i class="fa fa-calendar" aria-hidden="true"></i></span>
								    	  </span>
								    	</div>
								 </div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Phone</span>
								  <%= f.input :phone, :autofocus => true, :label => false ,input_html: { class: "input-sesion form-control",type:"number" }%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Country Residence</span>
								  <%= f.input :country_residence, as: :country, :autofocus => true, :label => false ,input_html: { class: "input-sesion form-control", style:"border-radius: 0px !important;" }%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">City</span>
								  <%= f.input :city, :autofocus => true, :label => false ,input_html: { class: "input-sesion form-control" }%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Address</span>
								  <%= f.input :address, :autofocus => true, :label => false ,input_html: { class: " form-control" , style:"border-radius: 0px !important;"}%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Email</span>
								  <%= f.input :email, :autofocus => true, :label => false ,input_html: { class: "input-sesion form-control" }%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Passsword</span>
								  <%= f.input :password, :label => false ,input_html: { class: "input-sesion form-control" }%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-6">
								  <span class="title-item-registration">Password Confirmation</span>
								  <%= f.input :password_confirmation, :label => false ,input_html: { class: "input-sesion form-control" }%>
								</div>
								<div class="section-item col-xs-12 col-sm-6 col-md-12" id="errors">	
									    
									    <div id="errors">
									    <%= f.error_notification %>	
									    </div>
								</div>
								
								<div id="caja_sign_in">
								     <%=link_to "Sign in",new_user_session_path, class: "recoverable" %>
								</div>
								<%= f.button :submit, "Sign up", :class => 'btn btn-lg btn-sesion center-block'  %>
 	               <% end %>
				</div>
          </div>
        </div>
     </div>
    </div>
 </div>
</div>   
				
              
                      
