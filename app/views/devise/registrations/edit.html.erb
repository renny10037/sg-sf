<%=render "app/layouts/navegation_navbar"%>
<div class="container" style="margin-top: 20px;">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="section-item col-xs-12 col-sm-6 col-md-6">
        <span class="title-item-registration">Name</span>
        <%= f.input :name, :autofocus => true,class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
        <span class="title-item-registration">Identification</span>
        <%= f.input :identification, :autofocus => true,class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
        <span class="title-item-registration" style="margin-bottom: 10px;">Birthdate</span>
         <%= f.input :birthdate, :autofocus => true, class: "validate #{'invalid' if flash[:alert]}", :label => false , input_html: {class: "form-control datepicker"}%> 

        <span class="title-item-registration" style="margin-top: 10px; t;">Country Residence</span>
        <%= f.input :country_residence, :autofocus => true,class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control borde"}%>  
        <span class="title-item-registration">Email</span>
        <%= f.input :email, :autofocus => true,class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
        <span class="title-item-registration">Passsword</span>
        <%= f.input :password, autocomplete: "off",class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
          <span class="title-item-registration">Current Password</span>
          <%= f.input :current_password, autocomplete: "off",class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
        
    </div>
   
    <div class="section-item col-xs-12 col-sm-6 col-md-6">
        <span class="title-item-registration">Lastname</span>
        <%= f.input :last_name, :autofocus => true,class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
        <span class="title-item-registration">Nationality</span>
        <%= f.input :nationality, as: :country, :autofocus => true,class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control borde" }%>
        <span class="title-item-registration">Address</span>
        <%= f.input :address, :autofocus => true,class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
      
          <span class="title-item-registration">City</span>
          <%= f.input :city, :autofocus => true,class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
            <span class="title-item-registration">Phone</span>
        <%= f.input :phone, :autofocus => true,class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
        
          <span class="title-item-registration">Password Confirmation</span>
          <%= f.input :password_confirmation, autocomplete: "off",class: "validate #{'invalid' if flash[:alert]}", :label => false ,input_html: { class: "input-sesion form-control" }%>
        <%= f.button :submit, "Edit", :class => 'btn btn-lg btn-sesion-edit'%>    
    </div>              
   </div>
</div>




<%end%>
