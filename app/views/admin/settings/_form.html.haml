.wrapper#settings
	.wrapper-body.container
		.actions
			= #link_to settings_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
			= #material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				.card-content
					= simple_form_for @setting, url: update_admin_settings_path(@render), method: :put do |f|
						.row
							= render partial: "admin/settings/fields/#{@render}", locals: { f: f }

							.form-actions.right
								- if @render.eql?('appearance')
									= link_to appearance_default_admin_settings_path(@render), class: "btn btn-white", method: :put do
										= t("keppler.actions.appearance_defaut")
								= f.button :submit, t("keppler.actions.apply")
	.wrapper-menu
		.card
