= title(t('keppler.titles.show', model: "Payments"))
.wrapper
	.wrapper-body.container
		.actions
			/ - if can? :delete, Payment
			/ 	= link_to admin_payment_path(@payment), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.delete"), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
			/ 		= material_icon.md_18.delete.css_class("md-dark")
			- if can? :update, Payment
				= link_to edit_admin_payment_path(@payment), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" =>t("keppler.actions.edit") do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to admin_payments_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.card
			.card-content
				%ul.list
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.id")
						.display-value.fs-body-1.tc-black-2= @payment.id.to_s.humanize
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.asignation_id")
						.display-value.fs-body-1.tc-black-2= @payment.asignation_id.to_s.humanize
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.quantify")
						.display-value.fs-body-1.tc-black-2= @payment.quantify.to_s.humanize
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.description")
						.display-value.fs-body-1.tc-black-2= @payment.description.to_s.humanize
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.Admin")
						.display-value.fs-body-1.tc-black-2= @payment.user.name.to_s.humanize
