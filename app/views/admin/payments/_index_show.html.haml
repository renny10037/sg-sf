.listing-show-header
	.actions
		- if can? :update, Payment
			= link_to edit_admin_payment_path(@payment), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%ul.list
			%li.list-row
				.display-label= t("activerecord.attributes.payment.asignation_id")
				.display-value= @payment.asignation_id
			%li.list-row
				.display-label= t("activerecord.attributes.payment.quantify")
				.display-value= @payment.quantify
			%li.list-row
				.display-label= t("activerecord.attributes.payment.description")
				.display-value= @payment.description
			%li.list-row
				.display-label= t("activerecord.attributes.payment.Admin")
				.display-value= @payment.user.name
			%li.list-row
				= link_to t('keppler.actions.back_history'), admin_payments_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
