.listing-show-header
	.actions
		-unless ((@state.id > 0) and (@state.id < 5)) or (@state.asignation != nil)
			- if can? :update, State
				= link_to edit_admin_state_path(@state), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
					= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%ul.list
			%li.list-row
				.display-label= t("activerecord.attributes.state.id")
				.display-value= @state.id
			%li.list-row
				.display-label= t("activerecord.attributes.state.name")
				.display-value= @state.name
			%li.list-row
				= link_to t('keppler.actions.back_history'), admin_states_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
