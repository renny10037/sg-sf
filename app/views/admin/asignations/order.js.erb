$(document).ready(function() {
 
    $('#asignation_phase_id').on('change', function() {
      $.ajax({
         url: "<%= asignations_phase_path %>",
         type: "POST",
         data: { phase_id: $(this).val() }
         
      });
     });
 
  $('select').material_select();
});

