.wrapper
	.wrapper-body.container
		.actions
			= link_to admin_percentage_costs_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				.card-content
					= simple_form_for [:admin, @percentage_cost] do |f|
						.row
							-unless ((controller_name == "percentage_costs") and (action_name =="edit"))
								= f.input :order_id, collection: @total_order, label_method: :id, value_method: :id, label: false, include_blank:'Select Order', input_html: { class: "browser-default" }
							-else
								="Order NÂ°:#{@percentage_cost.order.id}"
							= f.input :quantify

							.form-actions.right
								= f.button :submit, t("keppler.actions.save"), name: '_save'
								= f.button :submit, t("keppler.actions.save_and_add_another"), name: '_add_other'
