<%=render "app/layouts/navegation_navbar"%>




<div class="container" style="margin-top: 20px;">
	<h1> Editing Experience</h1>
    <div class="section-item col-xs-12 col-sm-6 col-md-6 col-lg-6">
    	<%= simple_form_for(@experience) do |f| %>
    	    <%= f.input :description, :label => false ,input_html: { class: "form-control",id:"edit-experience", style:"border-radius: 0px !important;" } %>
